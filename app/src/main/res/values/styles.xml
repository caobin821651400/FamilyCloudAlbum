<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IconTextButton">

        <attr name="selected_bg_color" format="color" />
        <attr name="un_selected_bg_color" format="color" />
        <attr name="selected_text_color" format="color" />
        <attr name="un_selected_text_color" format="color" />
        <attr name="selected_icon_color" format="color" />
        <attr name="un_selected_icon_color" format="color" />

    </declare-styleable>


    <style name="main_icon_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="un_selected_icon_color">#6B6C6C</item>
        <item name="un_selected_text_color">@color/white</item>
        <item name="selected_text_color">@color/app_main_color</item>
        <item name="un_selected_bg_color">@color/transparent</item>
        <item name="selected_bg_color">#1B2026</item>
        <item name="selected_icon_color">@color/app_main_color</item>
        <item name="iconSize">30dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="rippleColor">@color/translucent</item>
    </style>
</resources>