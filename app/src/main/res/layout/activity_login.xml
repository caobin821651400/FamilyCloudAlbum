<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_splash_bg"
    android:focusable="true">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="272dp"
        android:layout_height="272dp"
        android:layout_marginLeft="158dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="48dp"
        app:ci_height="10dp"
        app:ci_margin="10dp"
        app:ci_width="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/vp_content"
        app:layout_constraintRight_toRightOf="@+id/vp_content"
        app:layout_constraintTop_toBottomOf="@+id/vp_content" />


    <ImageView
        android:id="@+id/iv_rq_code"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/shape_corners_5dp_bg_cblibrary"
        android:padding="17dp"
        android:src="@mipmap/banner_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vp_content" />


    <TextView
        android:id="@+id/qsyugj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="请使用U点管家"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rq_code"
        app:layout_constraintTop_toBottomOf="@+id/iv_rq_code" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/login_udian"
        app:layout_constraintLeft_toRightOf="@+id/qsyugj"
        app:layout_constraintTop_toBottomOf="@+id/iv_rq_code" />


    <TextView
        android:id="@+id/smjrjt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="请使用U点管家"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/qsyugj"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/qsyugj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="按确认键可放大二维码"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rq_code"
        app:layout_constraintRight_toRightOf="@+id/iv_rq_code"
        app:layout_constraintTop_toBottomOf="@+id/smjrjt" />

</androidx.constraintlayout.widget.ConstraintLayout>